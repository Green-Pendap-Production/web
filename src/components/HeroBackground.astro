        <!-- Abstract Circle (Centerish) -->
        <div
            class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-96 h-96 rounded-full border border-gpp-primary/5 animate-pulse-slow pointer-events-none"
        >
        </div>
        <div
            class="absolute top-[40%] left-[60%] w-64 h-64 rounded-full border border-gpp-accent/5 animate-pulse-slow animation-delay-1000 pointer-events-none"
        >
        </div>
    </div>
</div>

<style>
    @keyframes float {
        0%,
        100% {
            transform: translateY(0) rotate(0deg);
        }
        50% {
            transform: translateY(-20px) rotate(5deg);
        }
    }

    @keyframes float-reverse {
        0%,
        100% {
            transform: translateY(0) rotate(0deg);
        }
        50% {
            transform: translateY(20px) rotate(-5deg);
        }
    }

    @keyframes float-spin {
        0% {
            transform: translateY(0) rotate(0deg);
        }
        50% {
            transform: translateY(-15px) rotate(10deg);
        }
        100% {
            transform: translateY(0) rotate(0deg);
        }
    }

    .animate-float-slow {
        animation: float 8s ease-in-out infinite;
    }

    .animate-float-delayed {
        animation: float 7s ease-in-out infinite 1s;
    }

    .animate-float-reverse {
        animation: float-reverse 9s ease-in-out infinite;
    }

    .animate-float-spin {
        animation: float-spin 10s ease-in-out infinite;
    }

    .animate-pulse-slow {
        animation: pulse 6s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }

    .animation-delay-1000 {
        animation-delay: 1s;
    }

    .pattern-grid {
        background-image: radial-gradient(currentColor 1px, transparent 1px);
        background-size: 40px 40px;
    }
</style>
