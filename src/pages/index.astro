---
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/ProjectCard.astro";
import HeroBackground from "../components/HeroBackground.astro";

const allGames = [
    {
        title: "Project Title",
        genre: "Genre",
        // image placeholder
        image: "https://images.unsplash.com/photo-1511485977113-f34c92461ad9?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80",
        year: "2022",
    },
];
---

<Layout title="Green Pendap Production">
    <!-- Hero Section -->
    <section
        id="home"
        class="min-h-screen flex flex-col justify-center items-start mb-24 relative overflow-hidden"
    >
        <HeroBackground />

        <div class="relative z-10 pointer-events-none">
            <!-- Content Container -->
            <span
                class="text-gpp-accent font-mono tracking-[0.2em] uppercase mb-6 block text-sm md:text-base font-bold"
                >GREEN PENDAP INTRODUCING</span
            >
            <h1
                class="text-7xl md:text-9xl font-heading text-gpp-primary leading-[0.9] mb-10 tracking-tighter drop-shadow-sm flex flex-col items-start"
            >
                <span
                    class="relative group inline-block cursor-default pointer-events-auto"
                >
                    <span
                        class="absolute inset-0 bg-gpp-primary scale-x-0 group-hover:scale-x-110 -left-[2%] w-[105%] transition-transform duration-500 origin-left ease-out -skew-x-6 -z-10"
                    ></span>
                    <span
                        class="relative z-10 group-hover:text-gpp-bg transition-colors duration-300"
                        >OUR GAME</span
                    >
                </span>
                <span
                    class="relative group inline-block cursor-default pointer-events-auto"
                >
                    <span
                        class="absolute inset-0 bg-gpp-accent scale-x-0 group-hover:scale-x-110 -left-[2%] w-[105%] transition-transform duration-500 origin-left ease-out -skew-x-6 -z-10"
                    ></span>
                    <span
                        class="relative z-10 group-hover:text-gpp-bg transition-colors duration-300"
                        >IS MADE</span
                    >
                </span>
                <span
                    class="relative group inline-block cursor-default pointer-events-auto"
                >
                    <span
                        class="absolute inset-0 bg-gpp-primary scale-x-0 group-hover:scale-x-110 -left-[2%] w-[105%] transition-transform duration-500 origin-left ease-out -skew-x-6 -z-10"
                    ></span>
                    <span
                        class="relative z-10 text-transparent bg-clip-text bg-linear-to-br from-gpp-primary to-gpp-accent/80 group-hover:text-gpp-bg group-hover:bg-none transition-all duration-300"
                        >OF LOVE</span
                    >
                </span>
            </h1>
            <p
                class="text-xl md:text-2xl text-gpp-text/80 max-w-2xl font-serif italic mb-12 leading-relaxed"
            >
                "Games should be more than just entertainment—they should be
                experiences that stick with you."
            </p>
            <a
                href="#games"
                class="inline-flex items-center gap-2 border-b-2 border-gpp-primary pb-1 hover:text-gpp-accent hover:border-gpp-accent transition-all duration-300 font-bold text-lg pointer-events-auto group"
            >
                View Our Work
                <span
                    class="group-hover:translate-x-1 transition-transform duration-300"
                    >&darr;</span
                >
            </a>
        </div>
    </section>

    <!-- Games Section -->
    <section id="games" class="mb-32 pt-16">
        <h2
            class="text-4xl font-heading text-gpp-primary mb-12 border-b border-gpp-text/10 pb-4"
        >
            Selected Works
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-16">
            {allGames.map((game) => <ProjectCard {...game} />)}
        </div>
    </section>

    <!-- About Section -->
    <section
        id="about"
        class="mb-32 pt-16 grid grid-cols-1 md:grid-cols-12 gap-12"
    >
        <div class="col-span-12 md:col-span-4">
            <h2
                class="text-4xl font-heading text-gpp-primary mb-6 border-b border-gpp-text/10 pb-4"
            >
                Our Studio
            </h2>
        </div>
        <div
            class="col-span-12 md:col-span-8 space-y-8 text-lg leading-relaxed"
        >
            <p class="text-2xl font-serif italic text-gpp-accent">
                Founded in 2025 in the heart of Bengkulu, Indonesia.
            </p>
            <p>
                We are a diverse team of artists, programmers, and storytellers
                who believe in the power of interactive media. Like the <span
                    class="text-gpp-primary font-bold">Pendap</span
                > — a traditional dish wrapped in leaves — our games are wrapped in
                layers of mystery and flavor, waiting to be unfolded.
            </p>
        </div>
    </section>

    <!-- Team Section -->
    <section class="mb-32">
        <h2
            class="text-4xl font-heading text-gpp-primary mb-12 border-b border-gpp-text/10 pb-4"
        >
            Our Team
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <!-- Management -->
            <div
                class="p-8 bg-white/50 backdrop-blur-sm rounded-3xl border border-white/20 hover:shadow-lg hover:-translate-y-1 transition-all duration-300"
            >
                <h3 class="text-2xl font-heading text-gpp-primary mb-6">
                    Management
                </h3>
                <ul class="space-y-3">
                    <li class="text-gpp-text/80 font-medium">
                        Abdul Vaiz Vahry Iskandar
                    </li>
                    <li class="text-gpp-text/80 font-medium">
                        Muhammad Yusuf Alfarabi
                    </li>
                    <li class="text-gpp-text/80 font-medium">
                        Kevin Stevino Arnovan
                    </li>
                </ul>
            </div>

            <!-- Programming -->
            <div
                class="p-8 bg-white/50 backdrop-blur-sm rounded-3xl border border-white/20 hover:shadow-lg hover:-translate-y-1 transition-all duration-300"
            >
                <h3 class="text-2xl font-heading text-gpp-primary mb-6">
                    Programming
                </h3>
                <ul class="space-y-3">
                    <li class="text-gpp-text/80 font-medium">
                        Rifqi Reis Ramadhan
                    </li>
                    <li class="text-gpp-text/80 font-medium">
                        Abdul Vaiz Vahry Iskandar
                    </li>
                </ul>
            </div>

            <!-- Design -->
            <div
                class="p-8 bg-white/50 backdrop-blur-sm rounded-3xl border border-white/20 hover:shadow-lg hover:-translate-y-1 transition-all duration-300"
            >
                <h3 class="text-2xl font-heading text-gpp-primary mb-6">
                    Design
                </h3>
                <ul class="space-y-3">
                    <li class="text-gpp-text/80 font-medium">
                        Atiqah Najla Fadhilah Rachman
                    </li>
                    <li class="text-gpp-text/80 font-medium">
                        Muhamad Gazril Alfarizi
                    </li>
                    <li class="text-gpp-text/80 font-medium">
                        Zora Ghaziyah Wanie
                    </li>
                    <li class="text-gpp-text/80 font-medium">
                        Zahra Alifia Anshori
                    </li>
                    <li class="text-gpp-text/80 font-medium">Kaysa Naura</li>
                </ul>
            </div>

            <!-- Audio -->
            <div
                class="p-8 bg-white/50 backdrop-blur-sm rounded-3xl border border-white/20 hover:shadow-lg hover:-translate-y-1 transition-all duration-300"
            >
                <h3 class="text-2xl font-heading text-gpp-primary mb-6">
                    Audio
                </h3>
                <ul class="space-y-3">
                    <li class="text-gpp-text/80 font-medium">Rafi Andika</li>
                    <li class="text-gpp-text/80 font-medium">
                        Kevin Stevino Arnovan
                    </li>
                </ul>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section
        id="contact"
        class="min-h-[50vh] pt-16 bg-gpp-primary text-gpp-bg -mx-12 px-12 pb-12 flex flex-col justify-between rounded-t-3xl mt-24"
    >
        <div>
            <h2 class="text-6xl font-heading mb-12 opacity-90">Let's Talk</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
                <div>
                    <h3
                        class="font-mono text-sm uppercase tracking-widest opacity-60 mb-2"
                    >
                        General Inquiries
                    </h3>
                    <a
                        href="mailto:contact@greenpendap.com"
                        class="text-2xl hover:underline decoration-gpp-accent underline-offset-4"
                        >greenpendapi@gmail.com
                    </a>
                </div>
                <!-- <div>
                    <h3
                        class="font-mono text-sm uppercase tracking-widest opacity-60 mb-2"
                    >
                        Careers
                    </h3>
                    <a
                        href="mailto:jobs@greenpendap.com"
                        class="text-2xl hover:underline decoration-gpp-accent underline-offset-4"
                        >jobs@greenpendap.com</a
                    >
                </div> -->
            </div>
        </div>

        <div
            class="mt-24 flex justify-between items-end border-t border-white/20 pt-8"
        >
            <p class="text-sm opacity-50">
                &copy; 2025 Green Pendap Production. All rights reserved.
            </p>
            <div class="flex gap-6">
                <a href="#" class="hover:text-gpp-accent transition-colors"
                    >Twitter</a
                >
                <a href="#" class="hover:text-gpp-accent transition-colors"
                    >Instagram</a
                >
                <a href="#" class="hover:text-gpp-accent transition-colors"
                    >LinkedIn</a
                >
            </div>
        </div>
    </section>
</Layout>
