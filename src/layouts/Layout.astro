---
import "../styles/global.css";
import Sidebar from "../components/Sidebar.astro";
import MobileHeader from "../components/MobileHeader.astro";

interface Props {
	title?: string;
	description?: string;
}

const {
	title = "Green Pendap Production",
	description = "Professional Game Development Studio",
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/logoNoText.png" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
	</head>
	<body class="flex min-h-screen bg-gpp-bg text-gpp-text">
		<MobileHeader />
		<Sidebar />
		<!-- Main Content Area with left margin to accommodate fixed sidebar -->
		<main
			class="grow ml-0 md:ml-64 p-6 md:p-12 min-h-screen max-w-5xl mt-16 md:mt-0"
		>
			<slot />
		</main>
	</body>
</html>
